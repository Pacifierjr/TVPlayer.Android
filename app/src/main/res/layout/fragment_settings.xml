<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/app_info_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:id="@+id/app_logo_settings"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="12dp"
            android:src="@drawable/tv_transparent"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/app_version_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="TV Player"
                    android:textAlignment="center"
                    android:textSize="26sp"/>
                <TextView
                    android:id="@+id/app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" V 2.0"
                    android:textStyle="italic"
                    android:textAlignment="center"
                    android:textSize="24sp"/>

            </LinearLayout>
            <TextView
                android:id="@+id/app_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:text="Android IPTV Player"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="20dp"
                android:gravity="start"
                android:textSize="12sp"
                android:text="Â©2020   CY3118018@gmail.com"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/copy_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/app_info_bar"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"

        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/copy_right"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Note: This App doesn't provide any TV sources. You need to add a playlist from your IPTV provider to be able to watch live TV channels."
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/channel_load_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/channels_count_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/load_channels_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginStart="15dp"
                android:text="Load channels from M3U playlist"
                android:textAlignment="center"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/playlist_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="85dp"
                android:background="@drawable/search_bg"
                android:drawableStart="@drawable/ic_link"
                android:ems="10"
                android:hint=" M3U Playlist URL"
                android:inputType="textPersonName"
                android:padding="8dp"/>
            <Button
                android:id="@+id/load_url_button"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="-75dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="5dp"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:text="Load"
                android:background="@drawable/round_corner"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/channels_count_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/channels_action_bar"
        android:layout_marginBottom="8dp"
        >
        <TextView
            android:id="@+id/channels_count_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:text="Total channels: "
            android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/channels_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/fav_channels_count_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:textStyle="italic"
            android:text="Favorites: "
            android:textAlignment="center"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/fav_channels_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/channels_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/load_default_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:text=" Load Default Channels "
            android:background="@drawable/round_corner"
            />

        <Button
            android:id="@+id/remove_all_button"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:text=" Remove All Channels "
            android:background="@drawable/round_corner"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>